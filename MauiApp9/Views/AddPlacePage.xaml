<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiApp9.ViewModels"
             x:Class="MauiApp9.Views.AddPlacePage"
             Title="Thêm địa điểm mới">
    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="20" Spacing="20">
        <Entry Placeholder="Tên địa điểm" Text="{Binding NewPlaceName}" />
        <Entry Placeholder="URL ảnh" Text="{Binding NewPlaceImg}" />
        <Picker ItemsSource="{Binding Cities}"
                ItemDisplayBinding="{Binding Name}"
                SelectedItem="{Binding NewPlaceCity}" />

        <Button Text="Thêm" Command="{Binding AddNewPlaceCommand}" />
    </StackLayout>
</ContentPage>
