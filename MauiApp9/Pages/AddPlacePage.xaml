<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp9.Pages.AddPlacePage"
             Title="Thêm địa điểm mới">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Tên địa điểm" />
            <Entry x:Name="NameEntry" Placeholder="Nhập tên địa điểm" />

            <Label Text="Thành phố" />
            <Picker x:Name="CityPicker"
                    Title="Chọn thành phố"
                    ItemsSource="{Binding Cities}"
                    ItemDisplayBinding="{Binding Name}" />

            <Label Text="Ảnh (link hoặc tên file ảnh)" />
            <Entry x:Name="ImgEntry" Placeholder="Nhập đường dẫn ảnh" />

            <Button x:Name="AddButton" Text="Thêm địa điểm"
                    Clicked="OnAddClicked"
                    BackgroundColor="Green"
                    TextColor="White" />

            <Label Text="Danh sách địa điểm đã thêm" Margin="0,20,0,0"/>
            <ListView x:Name="PlacesListView"
                      ItemsSource="{Binding Places}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Name}" />
                                <Label Text="{Binding Img}" />
                                <HorizontalStackLayout>
                                    <Button Text="Sửa" Clicked="OnEditClicked" BackgroundColor="Orange" TextColor="White" />
                                    <Button Text="Xóa" Clicked="OnDeleteClicked" BackgroundColor="Red" TextColor="White" />
                                </HorizontalStackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
